package com.spring.data.dao;

import com.spring.data.entity.Customer;

import jakarta.persistence.EntityManager;
import jakarta.persistence.PersistenceContext;
import jakarta.persistence.Query;

public class CustomerQueryRepository {

	@PersistenceContext
	EntityManager em;

	public Customer getUserByCity(String city) {

		String jpqlQuery = "SELECT c FROM Customer u WHERE u.city=:city";

		Query query = em.createQuery(jpqlQuery, Customer.class).setParameter(0, city);

		Customer singleResult = (Customer) query.getSingleResult();
		return singleResult;
	}
}
