package com.spring.data;

import java.time.LocalDate;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.spring.data.dao.CustomerRepository;
import com.spring.data.entity.Customer;

@SpringBootApplication
public class SpringDataMainApplication implements CommandLineRunner{
	
	@Autowired
	CustomerRepository repo;
	
	
	public static void main(String[] args) {
		SpringApplication.run(SpringDataMainApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		Customer c1 = new Customer(3L, "mukesh", "kanna", "mukesh@gmail.com", 7579908083L, "Madurai", "India",
				LocalDate.of(2000, 11, 18));
         		repo.save(c1);
	}
}
